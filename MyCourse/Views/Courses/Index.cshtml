
<h1>Catalgo dei corsi </h1> 


 @for(int i=1;i<10;i++){
<div class="row">
    <div class="col-md-1">
        <img src="~/logo.svg" width="32"/>
    </div>
    <div class="col-md-5">
        <h2>Titolo del corso @i</h2>
        <author>Mario Rossi</author>
    </div>
    <div class="col-md-2">
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
    </div>
    <div class="col-md-2">
        EUR 9.99 <br> <s>EUR 15.00</s>
    </div>
    <div class="col-md-2">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Courses" asp-route-id="@i">Dettaglio corso @i</a>
    </div>
</div>

}